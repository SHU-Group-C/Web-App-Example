@page
@model MyFirstRazorWebPage.Pages.UserServices.SuccessRegisterModuleModel
@{
    ViewData["Title"] = "Success Register Module";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register Services</title>
</head>
<body>

    <div>
        <h4>Services Registration Successful</h4>
        <hr />
    </div>

    <div>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RegMod[0].ServiceCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegMod[0].ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegMod[0].ServiceDuration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegMod[0].ServicePrice)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.RegMod.Count(); i++)
                {
                    <tr>
                        <td>
                        
                            @Model.RegMod[0].ServiceCode
                        </td>
                        <td>
                           
                            @Model.RegMod[0].ServiceName

                        </td>
                        <td>
                           
                            @Model.RegMod[0].ServiceDuration
                        </td>
                        <td>
                           
                            @Model.RegMod[0].ServicePrice
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>

    </div>
   


    <div>

        <a asp-page="/UserLoggedIn/SuccessLogIn">User Homepage</a>|
        <a asp-page="/UserServices/ViewRegisteredModule">View Registered Services</a>|
        <a asp-page="/UserLoggedIn/UserLogout">Logout</a>
    </div>
</body>
</html>