@page
@model MyFirstRazorWebPage.Pages.AdminPage.DeletePictureModel
@{
    ViewData["Title"] = "Admin Page - Delete User Picture";
}


!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Delete User Picture</title>

    </head>

    <body>

        <h3>Are you sure you want to delete picture?</h3>
        <div>
            <h4>User Picture</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <img id="displayImg" asp-for="~/ImageData/@Model.PicName" alt="User Picture" style=" max-width:180px;" />
                </dt>
               
            </dl>

            <form method="post">
                <input type="hidden" asp-for="User.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./UserDetails">Back to List</a>
            </form>
        </div>



    </body>
    </html>
